<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                             xmlns:app="http://schemas.android.com/apk/res-auto"
                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                             android:layout_height="match_parent" android:orientation="vertical"
>

    <ImageView
            android:layout_width="202dp"
            tools:srcCompat="@tools:sample/avatars[6]"
            android:id="@+id/image_foto_detail"
            android:layout_gravity="center" android:layout_height="209dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" app:srcCompat="@drawable/btnremove"
            android:id="@+id/btn_delete_detail" app:layout_constraintStart_toEndOf="@+id/image_foto_detail"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:backgroundTint="#B71C1C" app:maxImageSize="36dp"/>
    <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" app:srcCompat="@drawable/btnedit"
            android:id="@+id/btn_update_detail" app:layout_constraintStart_toEndOf="@+id/image_foto_detail"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_delete_detail" app:backgroundTint="#689F38"
            app:maxImageSize="36dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine|textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/text_detail_description" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/text_detail_salary" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:textAlignment="textStart" android:enabled="false"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text="Name"
            android:ems="10"
            android:id="@+id/text_detail_salary" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/text_detail_position" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:textAlignment="textStart" android:enabled="false"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName|text"
            android:text="Name"
            android:ems="10"
            android:id="@+id/text_detail_name" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/image_foto_detail" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:textSize="24sp" android:textAlignment="textStart"
            android:enabled="false"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/text_detail_position" android:layout_marginStart="4dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/text_detail_name" android:textSize="18sp"
            android:textAlignment="textStart" android:enabled="false"/>
</android.support.constraint.ConstraintLayout>